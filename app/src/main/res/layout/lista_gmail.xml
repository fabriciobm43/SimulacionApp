<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="93dp"
    android:background="#ffffff">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="3dp"
        app:cardElevation="3dp"
        android:layout_marginStart="11dp"
        android:layout_marginEnd="11dp"
        app:cardUseCompatPadding="true"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">


            <ImageView
                android:id="@+id/imagen_usuario_msj"
                android:layout_width="44dp"
                android:layout_height="41dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="327dp"
                android:layout_marginRight="327dp"
                android:background="@drawable/borde_archivo_drive"
                android:scaleType="centerCrop"
                android:src="@drawable/usuario_fabri" />

            <TextView
            android:id="@+id/txt_titulo_msj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="90dp"
            android:layout_marginLeft="116dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="50dp"
            android:layout_marginRight="29dp"
            android:text="sga2"
            android:textSize="16sp" />
            <TextView
            android:id="@+id/txt_asunto_msj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="60dp"
            android:layout_marginLeft="116dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="50dp"
            android:layout_marginRight="29dp"
            android:text="Login exitoso SGA"
            android:textSize="14sp" />
            <TextView
                android:id="@+id/txt_mensaje_msj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="60dp"
                android:layout_marginLeft="116dp"
                android:layout_marginTop="45dp"
                android:layout_marginEnd="50dp"
                android:layout_marginRight="29dp"
                android:text="Mensaje desde el Sitema de Gestion ... "
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txt_hora_msj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="320dp"
                android:layout_marginLeft="116dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="0dp"
                android:layout_marginRight="29dp"
                android:gravity="right"
                android:text="23:12"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/imagen_destacado_msj"
                android:layout_width="34dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="335dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="38dp"
                android:layout_marginEnd="0dp"
                android:layout_marginRight="337dp"
                android:background="@drawable/borde_archivo_drive"
                android:scaleType="centerCrop"
                android:src="@drawable/icono_destacados2" />
            <ImageView
                android:id="@+id/imagen_envio_msj"
                android:layout_width="34dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="90dp"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="315dp"
                android:layout_marginRight="337dp"
                android:background="@drawable/borde_archivo_drive"
                android:scaleType="centerCrop"
                android:src="@drawable/icono_envio" />


        </RelativeLayout>


    </androidx.cardview.widget.CardView>
</LinearLayout>